# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                     controllers.MainController.index
GET     /playground                           controllers.MainController.playground

GET     /perobj/                              controllers.QueryController.perobj(n = "test", qs = "Obj()")
GET     /perobj/:dbname                       controllers.QueryController.perobj(dbname, qs = "Obj()")
GET     /perobj/:dbname/*q                    controllers.QueryController.perobj(dbname, q)

GET     /perclass/:dbname/*q                  controllers.PerClassController.query(dbname, q)
GET     /timing/:dbname/:q                    controllers.TimingController.query(dbname, q)
GET     /perallocationsite/:dbname/*q         controllers.PerAllocationSiteController.query(dbname, q)

GET     /apropos/:dbname/:oid                 controllers.AproposController.apropos(dbname, oid)

GET     /source/:dbname/:klass                controllers.SourceCodeController.query(dbname, klass)

GET     /queryDataPost/:n                     controllers.QueryController.queryDataPost(n)

# An example controller showing how to use dependency injection
GET     /count                                controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                              controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)
